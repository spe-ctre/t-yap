# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=7d

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# MONNIFY PAYMENT GATEWAY
# ============================================
# Base URL (use sandbox for testing, production URL when live)
MONNIFY_BASE_URL=https://sandbox.monnify.com/api/v1
# API Credentials (get from Monnify dashboard)
MONNIFY_API_KEY=MK_TEST_your_api_key_here
MONNIFY_SECRET_KEY=your_secret_key_here
# Contract & Account Details
MONNIFY_CONTRACT_CODE=your_contract_code_here
MONNIFY_WALLET_ACCOUNT=your_wallet_account_number
# Webhook Configuration
MONNIFY_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# CRON JOBS
# ============================================
ENABLE_CRON=true

# ============================================
# PRODUCTION DEPLOYMENT (Render.com)
# ============================================
# Uncomment and set these for production:
# DATABASE_URL=postgresql://user:password@host:5432/production_db
# NODE_ENV=production
# MONNIFY_BASE_URL=https://api.monnify.com/api/v1
# MONNIFY_API_KEY=MK_PROD_your_production_key
# FRONTEND_URL=https://your-production-frontend.com